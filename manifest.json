{
  "manifest_version": 3,
  "name": "T3Chat Context Injector",
  "version": "1.0.0",
  "description": "Injects a button into T3Chat sidebar that grabs the main page HTML and drops it into the chat",
  "permissions": ["scripting", "sidePanel", "activeTab", "webNavigation"],
  "host_permissions": ["*://t3.chat/*", "<all_urls>"],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "action": {
    "default_title": "T3Chat Sidebar"
  },
  "content_scripts": [
    {
      "matches": ["*://t3.chat/*"],
      "js": ["iframe-injector.js"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle"
    }
  ]
}
