{
  "manifest_version": 3,
  "name": "T3Chat Sidebar",
  "version": "1.0.0",
  "description": "Opens T3chat in a browser sidebar",
  "permissions": ["sidePanel", "identity", "cookies"],
  "host_permissions": ["https://t3.chat/*", "https://accounts.google.com/*"],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "action": {
    "default_title": "Open T3Chat Sidebar"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+I"
      },
      "description": "Open T3Chat Sidebar"
    }
  }
}
