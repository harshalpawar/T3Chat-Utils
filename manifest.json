{
  "manifest_version": 3,
  "name": "SidekickChat",
  "version": "1.0.0",
  "description": "Seamlessly chat with T3Chat in a sidebar and get instant answers about any page you visit.",
  "permissions": ["scripting", "sidePanel", "activeTab", "webNavigation"],
  "host_permissions": ["*://t3.chat/*", "<all_urls>"],
  "background": {
    "service_worker": "background/background.js"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "action": {
    "default_title": "SidekickChat",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://t3.chat/*"],
      "js": ["node_modules/turndown/dist/turndown.js", "iframe-injector.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+I"
      },
      "description": "Toggle the sidebar"
    }
  }
}
