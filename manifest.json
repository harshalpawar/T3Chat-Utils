{
  "manifest_version": 3,
  "name": "T3Chat Sidebar",
  "version": "1.0.0",
  "description": "A Chrome extension that embeds T3chat in a sidebar with advanced features",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting"
  ],
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
